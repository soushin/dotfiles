
alias vim='/opt/homebrew/bin/nvim'

# ls
alias la="ls -lha"
alias lf="ls -lhF"
alias ll="ls -lh"

# git
alias g='git'
alias gst='git log --date=short --max-count=1 --pretty=format:'%Cgreen%h %cd %Cblue%cn%x09%Creset%s' | tail -1 && echo '' && git status -s -b'
alias gc='git commit'

# gh
alias gh-clone='gh repo clone'
alias gh-pr-co='gh pr checkout'
alias gh-view='gh repo view --web'
