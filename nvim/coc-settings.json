{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "coc.preferences.formatOnSaveFiletypes": ["go"],
  "go.goplsEnv": {
    "GOFLAGS": "-tags=e2e"
  }
}
